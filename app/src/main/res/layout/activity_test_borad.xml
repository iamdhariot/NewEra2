<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TestBoardActivity"
    android:id="@+id/drawer_layout"
    android:background="@color/black"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backArrowBtn"
                android:background="@drawable/btnbackground_eight"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="left"

                />

            <ImageButton
                android:id="@+id/nav_menu"
                android:background="@drawable/btnbackground_eight"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_menu_black_24dp"
                />
        </RelativeLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:text="Time Left :"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                    <TextView

                        android:id="@+id/timeLeft"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/questionNumber"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightGray"
                        android:text="Q.1."
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView

                        android:visibility="gone"
                        android:id="@+id/question"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"


                        android:padding="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="20sp" />
                </LinearLayout>
                <TextView

                    android:visibility="gone"
                    android:id="@+id/questionType"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="14dp"
                    android:padding="10dp"
                    android:text="(C Questions)"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox

                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/checkboxA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/lightGray"


                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="A."
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"



                            />

                        <TextView

                            android:visibility="gone"
                            android:id="@+id/choice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="Sunday"
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"


                            />



                    </LinearLayout>
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox

                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/checkboxB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/lightGray"


                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="B."
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"


                            />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/choice2"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="Saturday"
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"

                            />



                    </LinearLayout>
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox

                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/checkboxC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/lightGray"


                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="C."
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"


                            />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/choice3"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="Friday"
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"

                            />



                    </LinearLayout>
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox

                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/checkboxD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/lightGray"


                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="D."
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"


                            />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/choice4"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="Wednesday"
                            android:textColor="@color/lightGray"
                            android:textSize="16sp"

                            />



                    </LinearLayout>




                            <TextView
                                android:visibility="gone"
                                android:id="@+id/quit"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:background="@drawable/btnbackground_fsix"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:minWidth="100dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="100dp"
                                android:paddingRight="100dp"
                                android:text="Quit"
                                android:textColor="@color/red"
                                android:textSize="16sp" />






                    <ProgressBar
                        android:layout_marginTop="100dp"
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:visibility="visible" />
                    <TextView

                        android:visibility="visible"
                        android:id="@+id/waitText"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/lightGray"
                        android:text="Please wait..."
                        android:gravity="center"
                        android:layout_marginBottom="100dp"

                        />



                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="#263238"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:id="@+id/profile"
                    android:background="@drawable/btnbackground_eight"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_person_white_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/share"
                    android:background="@drawable/btnbackground_eight"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_menu_share"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        />

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/feedback"
                    android:background="@drawable/btnbackground_eight"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_rss_feed_black_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        />

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/about"
                    android:background="@drawable/btnbackground_eight"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_info_black_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/signout"
                android:background="@drawable/btnbackground_eight"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rotatesign_out_icon"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    />

            </LinearLayout>
        </RelativeLayout>


    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>


