<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TestProgramingCataActivity"
    android:id="@+id/drawer_layout"
    android:background="@mipmap/sign_in_background"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backArrowBtn"
                android:background="@drawable/btnbackground_eight"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="left"

                />

            <ImageButton
                android:id="@+id/nav_menu"
                android:background="@drawable/btnbackground_eight"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_menu_black_24dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Please select your Programing language for questions."
                android:textColor="@color/lightGray"
                android:textSize="24sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="center"

                    >
                    <TextView
                        android:id="@+id/c"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:focusable="true"
                        android:text="C"
                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:textSize="16sp"
                        android:layout_margin="5dp"



                        />
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/cpp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="C++"

                        android:textSize="16sp" />


                </TableRow>
                <TableRow
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_margin="5dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:id="@+id/csharp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="C#"


                        android:textSize="16sp" />
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/java"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"

                        android:text="Java"

                        android:textSize="16sp" />
                </TableRow>
                <TableRow
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/html"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Html"

                        android:textSize="16sp" />
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/css"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"

                        android:text="CSS"

                        android:textSize="16sp" />

                </TableRow>
                <TableRow
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/javaScript"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"

                        android:text="JavaScript"

                        android:textSize="16sp" />

                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/python"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"

                        android:text="Python"

                        android:textSize="16sp" />
                </TableRow>
                <TableRow
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/android"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Android"

                        android:textSize="16sp" />
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/mySQL"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnbackground_four"
                        android:textColor="@color/lightGray"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="mySQL"

                        android:textSize="16sp" />

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<android.support.design.widget.NavigationView
android:id="@+id/nav_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="end"
android:fitsSystemWindows="true"
android:background="#263238"

    >
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/profile"
            android:background="@drawable/btnbackground_eight"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_white_24dp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="@color/lightGray"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/share"
            android:background="@drawable/btnbackground_eight"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu_share"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="@color/lightGray"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/feedback"
            android:background="@drawable/btnbackground_eight"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_rss_feed_black_24dp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="@color/lightGray"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/about"
            android:background="@drawable/btnbackground_eight"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_info_black_24dp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="@color/lightGray"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/signout"
        android:background="@drawable/btnbackground_eight"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rotatesign_out_icon"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="@color/lightGray"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            />

    </LinearLayout>
</RelativeLayout>


</android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>

