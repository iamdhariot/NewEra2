<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background"
    tools:context=".QuestionCategoriesActivity"
    android:id="@+id/drawer_layout"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backArrowBtn"
                android:background="@drawable/btnbackground_eight"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_gravity="left"

                />

            <ImageButton
                android:id="@+id/nav_menu"
                android:background="@drawable/btnbackground_eight"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_menu_black_24dp"
                />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="center"
            android:orientation="vertical">

            <TextView


                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Please select your questions category."
                android:textColor="@color/lightGray"
                android:textSize="23sp" />

            <Button

                android:id="@+id/allMixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btnbackground_four"
                android:fontFamily="monospace"
                android:gravity="center"
                android:minWidth="300dp"
                android:padding="10dp"
                android:text="@string/all"
                android:textAllCaps="false"
                android:textColor="@color/lightGray"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <Button

                android:id="@+id/aptitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btnbackground_four"
                android:fontFamily="monospace"
                android:gravity="center"
                android:minWidth="300dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="@string/aptitude"
                android:textAllCaps="false"
                android:textColor="@color/lightGray"
                android:textSize="20sp"
                />
            <Button

                android:id="@+id/reasoning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btnbackground_four"
                android:fontFamily="monospace"
                android:gravity="center"
                android:minWidth="300dp"
                android:padding="10dp"
                android:text="@string/reasoning"
                android:textAllCaps="false"
                android:textColor="@color/lightGray"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <Button

                android:id="@+id/programing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btnbackground_four"
                android:fontFamily="monospace"
                android:gravity="center"
                android:minWidth="300dp"
                android:padding="10dp"
                android:text="@string/programing"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/lightGray"
                android:textSize="20sp"
                />





        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="@color/bluedark"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="20dp"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout


                    android:id="@+id/profile"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_person_white_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        />

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/share"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_menu_share"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        />

                </LinearLayout>
                <LinearLayout


                    android:id="@+id/feedback"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_rss_feed_black_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        />

                </LinearLayout>
                <LinearLayout


                    android:id="@+id/about"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_info_black_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/signout"
                android:background="@drawable/btnbackground_nine"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rotatesign_out_icon"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    />

            </LinearLayout>
        </RelativeLayout>


    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
