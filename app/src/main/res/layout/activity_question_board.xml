<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QuestionBoardActivity"
    android:id="@+id/drawer_layout"
    android:background="@color/skyblue"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/backArrowBtn"
                    android:background="@drawable/btnbackground_eight"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="left"

                    />

                <ImageButton
                    android:id="@+id/nav_menu"
                    android:background="@drawable/btnbackground_eight"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_menu_black_24dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout

            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:id="@+id/questionNumber"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Q.1."
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        />
            <TextView

                android:visibility="gone"
                android:id="@+id/question"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"



                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
</LinearLayout>
            <TextView

                android:visibility="gone"
                android:id="@+id/questionType"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="14dp"
                android:padding="10dp"
                android:text="(C Questions)"
                android:textColor="@color/bluedark"
                android:textSize="16sp" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="A."
                        android:textColor="@color/black"
                        android:textSize="16sp"


                        />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/choice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="Sunday"
                        android:textColor="@color/black"
                        android:textSize="16sp"


                        />



                </LinearLayout>
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="B."
                        android:textColor="@color/black"
                        android:textSize="16sp"


                        />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/choice2"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="Saturday"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        />



                </LinearLayout>
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="C."
                        android:textColor="@color/black"
                        android:textSize="16sp"


                        />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/choice3"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="Friday"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        />



                </LinearLayout>
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="D."
                        android:textColor="@color/black"
                        android:textSize="16sp"


                        />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/choice4"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="Wednesday"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        />



                </LinearLayout>



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/answer"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btnbackground_five"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="12dp"
                            android:text="Answer"
                            android:textColor="@color/greenLight"
                            android:textSize="16sp"
                            android:minWidth="100dp"
                            android:layout_margin="15dp"

                            android:layout_weight=".5"
                            />

                        <TextView
                            android:visibility="gone"
                            android:layout_weight=".5"
                            android:id="@+id/quit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@drawable/btnbackground_fsix"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:padding="12dp"
                            android:text="Next"
                            android:textColor="@color/red"
                            android:textSize="16sp" />





                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/answerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:layout_gravity="left"

                        android:padding="10dp"
                        android:text="Answer :"
                        android:textColor="@color/greenLight"
                        android:textSize="16sp"
                        android:minWidth="120dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/rightAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"

                        android:layout_gravity="left"
                        android:text="option A"
                        android:padding="8dp"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/explanationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left"

                    android:padding="10dp"
                    android:text="Explanation :"
                    android:textColor="@color/greenLight"
                    android:textSize="16sp"
                    android:minWidth="120dp"
                    />


                <TextView

                    android:visibility="gone"
                    android:id="@+id/explanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="left"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

            </LinearLayout>

                <ProgressBar

                  android:layout_marginTop="100dp"
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    />
                <TextView


                    android:id="@+id/waitText"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/lightGray"
                    android:text="Please wait..."
                    android:gravity="center"
                    android:layout_marginBottom="100dp"

                    />



        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="@color/bluedark"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="20dp"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout


                    android:id="@+id/profile"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_person_white_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        />

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/share"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_menu_share"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        />

                </LinearLayout>
                <LinearLayout


                    android:id="@+id/feedback"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_rss_feed_black_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        />

                </LinearLayout>
                <LinearLayout


                    android:id="@+id/about"
                    android:background="@drawable/btnbackground_nine"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_info_black_24dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textColor="@color/lightGray"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/signout"
                android:background="@drawable/btnbackground_nine"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rotatesign_out_icon"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    />

            </LinearLayout>
        </RelativeLayout>


    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
