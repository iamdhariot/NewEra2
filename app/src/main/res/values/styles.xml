<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noActionbarFullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/lightGray</item>
        <item name="android:windowSoftInputMode">adjustPan</item>

        <!-- <item name="android:windowAnimationStyle"></item>-->


    </style>
    <style name="splashScreenTheme" parent="noActionbarFullScreen">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="noActionbarFullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="noActionbarFullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
